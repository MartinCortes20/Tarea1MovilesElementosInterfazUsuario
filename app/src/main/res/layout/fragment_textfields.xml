<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- T칤tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游닇 TextFields (EditText)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:padding="8dp"
            android:gravity="center" />

        <!-- Explicaci칩n -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los TextFields permiten al usuario ingresar y editar texto. Son fundamentales para formularios y entrada de datos."
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp" />

        <!-- TextField b치sico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextField B치sico:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
        android:hint="Escribe algo aqu칤..."
        android:layout_marginBottom="16dp" />

        <!-- TextField con 칤cono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextField con 칈cono:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etWithIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
        android:hint="Buscar..."
        android:drawableStart="@android:drawable/ic_search_category_default"
        android:drawablePadding="8dp"
        android:layout_marginBottom="16dp" />

        <!-- TextField para contrase침a -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextField para Contrase침a:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

        <!-- TextField num칠rico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextField Num칠rico:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
        android:hint="Ingresa un n칰mero"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

        <!-- TextField multilinea (Ya tiene altura fija, no necesita minHeight) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextField Multilinea:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMultiline"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Escribe un mensaje largo..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Bot칩n de demostraci칩n -->
        <Button
            android:id="@+id/btnShowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Texto Ingresado"
            android:layout_marginBottom="16dp" />

        <!-- 츼rea de resultado -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los textos ingresados aparecer치n aqu칤..."
            android:background="#F0F0F0"
            android:padding="12dp"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>